<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Ventas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Ventas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span> Inicio</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-info-sign"></span> Acerca de</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")"><span class="glyphicon glyphicon-envelope"></span> Contacto</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Products")"><span class="glyphicon glyphicon-inbox"></span> Productos</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <br />
    </div>
    <footer class="footer bg-primary text-center">
        <p>&copy; @DateTime.Now.Year - Sistema de Ventas</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
