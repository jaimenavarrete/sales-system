@model CreateCategoryViewModel
@{
    ViewBag.Title = "Crear Categoría";
}

<div class="page-title">
    <a href="@Url.Action("Index", "Categories")" class="btn btn-link">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Regresar
    </a>
    <h2> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> @ViewBag.Title</h2>
</div>
<ol class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
    <li>@Html.ActionLink("Categorías", "Index", "Categories")</li>
    <li class="active">@ViewBag.Title</li>
</ol>

@{ Html.RenderPartial("_ResultMessage"); }

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Información de categoría</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateCategory", "Categories", FormMethod.Post, new { id = "CreateCategoryForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
            </div>
        }
    </div>
    <div class="panel-footer text-center">
        <button class="btn btn-success" form="CreateCategoryForm">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Crear
        </button>
        <button type="reset" class="btn btn-default" form="CreateCategoryForm">
            <span class="glyphicon glyphicon-erase" aria-hidden="true"></span> Limpiar
        </button>
    </div>
</div>
